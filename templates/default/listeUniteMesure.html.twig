{% extends 'base.html.twig' %}

{% block title %}Liste Unité de mesure
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des unités de mesure</h1>
		<div class="row">

			{% if is_granted('ROLE_ADMIN') %}
				<div class="col-4 mt-4">
					<a class="btn btn-success" href="{{ path('ajouter_unite_mesure') }}">Ajouter</a>
				</div>
			{% endif %}

			<div class="col-12">
				<table class="table table-hover mt-4">
					<thead>
						<tr class="table-primary">
							<th scope="col">Nom</th>
							<th scope="col">Libelle</th>
							{% if is_granted('ROLE_ADMIN') %}
								<th scope="col">Actions</th>
							{% endif %}
						</tr>
					</thead>
					<tbody>
						{% for unite_mesure in unites_mesure %}
							<tr>
								<td>{{ unite_mesure.nomAbrege }}</td>
								<td>{{ unite_mesure.libelle }}</td>
								{% if is_granted('ROLE_ADMIN') %}
									<td>
										<a href="{{ path('edition_unite_mesure', {'id' : unite_mesure.id }) }}">
											<i class="fa-solid fa-pen m-2"></i>
										</a>
										<a href="{{ path('suppression_unite_mesure', {'id' : unite_mesure.id }) }}">
											<i class="fa fa-trash m-2"></i>
										</a>
									</td>
								{% endif %}
							</tr>
						{% endfor %}
					</tbody>
				</div>
			</div>
		</tbody>
	</table>

	{# display navigation #}
	<div class="navigation d-flex justify-content-center">
		{{ knp_pagination_render(unites_mesure) }}
	</div>
</div></div></div>{% endblock %}